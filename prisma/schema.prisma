//   url      = env("DATABASE_URL")
// }

model Users {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  image    String?
  role     Role     @default(USER)
  posts    Posts[]
  audios   Audios[]
}

model Posts {
  id       Int     @id @default(autoincrement())
  title    String
  subtitle String?
  image    String?
  audio    String
  author   Users?  @relation(fields: [authorId], references: [id])
  authorId Int?
}

model Audios {
  id       Int     @id @default(autoincrement())
  title    String?
  subtitle String?
  audio    String
  author   Users?  @relation(fields: [authorId], references: [id])
  authorId Int?
}

enum Role {
  USER
  ADMIN
}
