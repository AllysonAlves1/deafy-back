model Users {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  image    String?
  role     Role     @default(USER)
  audios   Audios[]
}
model Audios {
  id       Int     @id @default(autoincrement())
  title    String?
  subtitle String?
  image    String?
  category Category @default(AUDIO)
  file_path    String
  author   Users @relation(fields: [authorId], references: [id])
  authorId Int
}

enum Role {
  USER
  ADMIN
}

enum Category {
  AUDIO
  MUSIC
  PODCAST
  AUDIOBOOK
}
